---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Blog">
  <div class="container py-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-2">Blog</h1>
    <p class="text-gray-600 mb-8">Thoughts on web development and technology</p>
    
    {sortedPosts.length === 0 ? (
      <p class="text-gray-500">No blog posts yet. Check back soon!</p>
    ) : (
      <div class="space-y-6">
        {sortedPosts.map(post => (
          <article class="border-b pb-6 last:border-b-0">
            <a href={`/blog/${post.slug}`} class="group no-underline">
              <h2 class="text-2xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors mb-2">
                {post.data.title}
              </h2>
            </a>
            <p class="text-gray-600 text-sm mb-3">
              {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </p>
            <p class="text-gray-700">{post.data.excerpt}</p>
            <a href={`/blog/${post.slug}`} class="inline-block mt-3 text-blue-600 hover:text-blue-700 font-medium">
              Read More â†’
            </a>
          </article>
        ))}
      </div>
    )}
  </div>
</Layout>
