---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const blogPosts = await getCollection('blog');
const sortedPosts = blogPosts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Blog">
  <div class="container py-12">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-2">Blog</h1>
    <p class="text-gray-600 dark:text-gray-400 mb-8">Thoughts on web development and technology</p>

    {sortedPosts.length === 0 ? (
      <p class="text-gray-500 dark:text-gray-400">No blog posts yet. Check back soon!</p>
    ) : (
      <div class="space-y-6">
        {sortedPosts.map(post => (
          <article class="border-b border-gray-200 dark:border-gray-700 pb-6 last:border-b-0" transition:name={`blog-${post.slug}`}>
            <a href={`/blog/${post.slug}`} class="group no-underline">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors mb-2">
                {post.data.title}
              </h2>
            </a>
            <p class="text-gray-600 dark:text-gray-400 text-sm mb-3">
              {post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </p>
            <p class="text-gray-700 dark:text-gray-300">{post.data.excerpt}</p>
            <a href={`/blog/${post.slug}`} class="inline-block mt-3 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium no-underline transition-colors">
              Read More â†’
            </a>
          </article>
        ))}
      </div>
    )}
  </div>
</Layout>
