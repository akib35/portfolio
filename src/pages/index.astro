---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { siteConfig } from '../config';
import { projects } from '../data/projects';
const name = siteConfig.name;

const featuredProjects = projects.filter(project => project.featured);

const gridClasses = featuredProjects.length === 1 ? 'grid-cols-1' :
  featuredProjects.length === 2 ? 'grid-cols-1 md:grid-cols-2' :
  'grid-cols-1 md:grid-cols-2 lg:grid-cols-3';
---

<Layout title={`${siteConfig.name} - Portfolio`}>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="container text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Hello, I'm <span id="typewriter" class="text-blue-600" data-name={name}></span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-8">
        A passionate web developer focused on creating beautiful, functional, and user-centered digital experiences.
      </p>
      <div class="flex justify-center gap-4">
        <a href="/projects" class="btn btn-primary">
          View My Work
        </a>
        <a href="/contact" class="btn btn-secondary">
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  <!-- About Preview Section -->
  <section class="py-16 bg-gray-100">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">About Me</h2>
        <p class="text-lg text-gray-600 mb-6">
          I'm a developer who cares about writing clean code and building products that make a difference. 
          With expertise in modern web technologies, I bring ideas to life through thoughtful design and solid engineering.
        </p>
        <a href="/about" class="text-blue-600 hover:text-blue-800 font-medium">
          Learn more about me →
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-16">
    <div class="container">
      <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
        Featured Projects
      </h2>
      <div class={`grid gap-6 justify-center ${gridClasses}`}>
        {featuredProjects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
      <div class="text-center mt-8">
        <a href="/projects" class="btn btn-secondary">
          View All Projects →
        </a>
      </div>
    </div>
  </section>
</Layout>

<!-- Client-side script (runs in browser) -->
<script>
  import { initTypewriter } from '../scripts/typewriter';
  initTypewriter();
</script>
