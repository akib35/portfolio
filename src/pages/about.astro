---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config';

const programmingLanguages = ["Python", "C++", "C", "Go", "JavaScript", "Java"];
const frameworks = ["Django", "React", "Bootstrap", "Flutter"];
const tools = ["Git", "REST API", "SQL", "Docker", "Linux", "PostgreSQL"];
const softwareDesign = ["SOLID", "Design Patterns"];
const interests = ["Parallel Computing", "Cloud Computing", "Computer Security"];
---

<Layout title={`About - ${siteConfig.name}`}>
  <section class="py-20 dark:bg-gray-900">
    <div class="container">
      <div class="max-w-2xl mx-auto">
        <!-- Intro -->
        <div class="mb-12">
          <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">About Me</h1>
          <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mb-4">
            I'm <strong class="text-gray-900 dark:text-white">{siteConfig.name}</strong>, a Computer Science graduate from
            Chittagong University of Engineering and Technology (CUET) based in {siteConfig.location}.
          </p>
          <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mb-4">
            I'm passionate about building full-stack web applications, mobile apps, and solving complex problems.
            I have experience with Django, React, Flutter, and various backend technologies including PostgreSQL and Docker.
          </p>
          <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed mb-4">
            I've solved <strong class="text-gray-900 dark:text-white">200+ problems</strong> on platforms like LeetCode, Codeforces,
            HackerRank, and AtCoder, which has strengthened my algorithmic thinking and problem-solving abilities.
          </p>
          <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
            My interests include Parallel Computing, Cloud Computing, and Computer Security. I'm always eager to
            learn new technologies and take on challenging projects.
          </p>
        </div>

        <!-- Skills -->
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Skills</h2>

          <div class="space-y-6">
            <div>
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">Programming Languages</h3>
              <div class="flex flex-wrap gap-2">
                {programmingLanguages.map((skill) => (
                  <span class="px-3 py-1.5 bg-blue-50 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 text-sm rounded-lg">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            <div>
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">Frameworks & Libraries</h3>
              <div class="flex flex-wrap gap-2">
                {frameworks.map((skill) => (
                  <span class="px-3 py-1.5 bg-green-50 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-sm rounded-lg">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            <div>
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">Tools & Technologies</h3>
              <div class="flex flex-wrap gap-2">
                {tools.map((skill) => (
                  <span class="px-3 py-1.5 bg-purple-50 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 text-sm rounded-lg">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            <div>
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">Software Design</h3>
              <div class="flex flex-wrap gap-2">
                {softwareDesign.map((skill) => (
                  <span class="px-3 py-1.5 bg-orange-50 dark:bg-orange-900/30 text-orange-700 dark:text-orange-300 text-sm rounded-lg">
                    {skill}
                  </span>
                ))}
              </div>
            </div>

            <div>
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">Interests</h3>
              <div class="flex flex-wrap gap-2">
                {interests.map((interest) => (
                  <span class="px-3 py-1.5 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 text-sm rounded-lg">
                    {interest}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="pt-8 border-t border-gray-200 dark:border-gray-700">
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Interested in working together? I'd love to hear from you.
          </p>
          <a href="/contact" class="btn btn-primary">
            Get in Touch
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
