---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config';
import { about } from '../utils/about';
import { Image } from 'astro:assets';
import myPic from '../assets/my-pic.png';

const { intro, bio, education, skills, programmingProfiles, values } = about;

// Skill color mappings
const colorClasses: Record<string, { bg: string; text: string }> = {
  blue: { bg: 'bg-blue-50 dark:bg-blue-900/30', text: 'text-blue-700 dark:text-blue-300' },
  green: { bg: 'bg-green-50 dark:bg-green-900/30', text: 'text-green-700 dark:text-green-300' },
  purple: { bg: 'bg-purple-50 dark:bg-purple-900/30', text: 'text-purple-700 dark:text-purple-300' },
  orange: { bg: 'bg-orange-50 dark:bg-orange-900/30', text: 'text-orange-700 dark:text-orange-300' },
  gray: { bg: 'bg-gray-100 dark:bg-gray-700', text: 'text-gray-700 dark:text-gray-300' },
};

// Icon color mappings for skills
const iconColors: Record<string, string> = {
  blue: 'text-blue-500',
  green: 'text-green-500',
  purple: 'text-purple-500',
  orange: 'text-orange-500',
  gray: 'text-gray-500',
};
---

<Layout title={`About - ${siteConfig.name}`}>
  <!-- Hero Section with Profile Picture -->
  <section class="py-20 bg-gradient-to-br from-gray-50 via-white to-gray-100 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 relative overflow-hidden">
    <!-- Decorative Background Elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-br from-blue-400/10 to-purple-400/10 rounded-full -translate-y-48 translate-x-48 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-gradient-to-tr from-purple-400/10 to-pink-400/10 rounded-full translate-y-40 -translate-x-40 blur-3xl"></div>
    
    <div class="container relative">
      <div class="max-w-5xl mx-auto">
        <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
          <!-- Profile Picture -->
          <div class="relative flex-shrink-0">
            <!-- Animated ring -->
            <div class="absolute inset-0 rounded-full bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 animate-spin-slow blur-sm opacity-75" style="animation: spin 8s linear infinite;"></div>
            <div class="relative">
              <div class="w-56 h-56 md:w-72 md:h-72 rounded-full p-1.5 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500">
                <div class="w-full h-full rounded-full bg-white dark:bg-gray-900 p-1">
                  <Image
                    src={myPic}
                    alt={siteConfig.name}
                    width={288}
                    height={288}
                    format="webp"
                    class="w-full h-full rounded-full object-cover"
                  />
                </div>
              </div>
            </div>
          </div>
          
          <!-- Text Content -->
          <div class="text-center lg:text-left flex-1">
            <div class="section-badge mb-4 inline-flex">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
              </svg>
              About Me
            </div>
            <p class="text-blue-600 dark:text-blue-400 font-medium mb-2">{intro.greeting}</p>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-4">
              {siteConfig.name}
            </h1>
            <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-2 font-medium">{intro.title}</p>
            <p class="text-gray-500 dark:text-gray-400 text-lg mb-6">{intro.tagline}</p>
            
            <!-- Quick Stats -->
            <div class="flex flex-wrap justify-center lg:justify-start gap-6 pt-4">
              <div class="text-center">
                <div class="text-2xl font-bold text-gray-900 dark:text-white">10+</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Projects</div>
              </div>
              <div class="w-px bg-gray-200 dark:bg-gray-700"></div>
              <div class="text-center">
                <div class="text-2xl font-bold text-gray-900 dark:text-white">3+</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Years Coding</div>
              </div>
              <div class="w-px bg-gray-200 dark:bg-gray-700"></div>
              <div class="text-center">
                <div class="text-2xl font-bold text-gray-900 dark:text-white">500+</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Problems Solved</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 dark:bg-gray-900">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        
        <!-- My Story -->
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-blue-500 to-purple-500 flex items-center justify-center shadow-lg shadow-blue-500/25">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">My Story</h2>
          </div>
          <div class="bg-white dark:bg-gray-800/50 rounded-2xl p-8 border border-gray-100 dark:border-gray-700/50 shadow-lg shadow-gray-200/50 dark:shadow-none space-y-4">
            {bio.map((paragraph) => (
              <p class="text-gray-600 dark:text-gray-300 leading-relaxed text-lg">{paragraph}</p>
            ))}
          </div>
        </div>

        <!-- Education -->
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-green-500 to-emerald-500 flex items-center justify-center shadow-lg shadow-green-500/25">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
              </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">Education</h2>
          </div>
          <div class="bg-white dark:bg-gray-800/50 rounded-2xl p-8 border border-gray-100 dark:border-gray-700/50 shadow-lg shadow-gray-200/50 dark:shadow-none relative overflow-hidden">
            <!-- Decorative element -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-green-500/10 to-emerald-500/10 rounded-full -translate-y-16 translate-x-16"></div>
            
            <div class="relative">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-2 mb-4">
                <div>
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{education.degree}</h3>
                  <p class="text-gray-600 dark:text-gray-400">{education.institution}</p>
                </div>
                <span class="px-4 py-1.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-sm font-semibold rounded-full whitespace-nowrap">
                  {education.year}
                </span>
              </div>
              <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-700">
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-3">Achievements</p>
                <div class="grid gap-2">
                  {education.achievements.map((achievement) => (
                    <div class="flex items-center gap-3 text-gray-600 dark:text-gray-300">
                      <div class="w-6 h-6 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center flex-shrink-0">
                        <svg class="w-3.5 h-3.5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                      </div>
                      {achievement}
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Skills -->
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center shadow-lg shadow-purple-500/25">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">Skills & Technologies</h2>
          </div>
          <div class="grid md:grid-cols-2 gap-6">
            {Object.values(skills).map((category) => (
              <div class="bg-white dark:bg-gray-800/50 rounded-2xl p-6 border border-gray-100 dark:border-gray-700/50 shadow-lg shadow-gray-200/50 dark:shadow-none hover:shadow-xl transition-shadow">
                <div class="flex items-center gap-3 mb-4">
                  <div class={`w-2 h-8 rounded-full bg-gradient-to-b ${category.color === 'blue' ? 'from-blue-400 to-blue-600' : category.color === 'green' ? 'from-green-400 to-green-600' : category.color === 'purple' ? 'from-purple-400 to-purple-600' : category.color === 'orange' ? 'from-orange-400 to-orange-600' : 'from-gray-400 to-gray-600'}`}></div>
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white">
                    {category.label}
                  </h3>
                </div>
                <div class="flex flex-wrap gap-2">
                  {category.items.map((item) => (
                    <span class={`px-3 py-1.5 ${colorClasses[category.color].bg} ${colorClasses[category.color].text} text-sm font-medium rounded-lg hover:scale-105 transition-transform cursor-default`}>
                      {item}
                    </span>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Programming Profiles -->
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-orange-500 to-red-500 flex items-center justify-center shadow-lg shadow-orange-500/25">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">Competitive Programming</h2>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {programmingProfiles.map((profile) => (
              <a 
                href={profile.link}
                target="_blank"
                rel="noopener noreferrer"
                class="group bg-white dark:bg-gray-800/50 rounded-2xl p-6 border border-gray-100 dark:border-gray-700/50 hover:border-orange-300 dark:hover:border-orange-600 shadow-lg shadow-gray-200/50 dark:shadow-none hover:shadow-xl transition-all no-underline hover:-translate-y-1"
              >
                <div class="flex items-center justify-between mb-3">
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors">
                    {profile.platform}
                  </h3>
                  <div class="w-10 h-10 rounded-xl bg-orange-100 dark:bg-orange-900/30 flex items-center justify-center group-hover:bg-orange-200 dark:group-hover:bg-orange-900/50 transition-colors">
                    <svg class="w-5 h-5 text-orange-600 dark:text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                  </div>
                </div>
                <p class="text-gray-500 dark:text-gray-400 text-sm mb-2">@{profile.username}</p>
                <p class="text-orange-600 dark:text-orange-400 font-semibold">{profile.stats}</p>
              </a>
            ))}
          </div>
        </div>

        <!-- Values -->
        <div class="mb-20">
          <div class="flex items-center gap-4 mb-8">
            <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-cyan-500 to-blue-500 flex items-center justify-center shadow-lg shadow-cyan-500/25">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">What I Value</h2>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {values.map((value, index) => (
              <div class="bg-white dark:bg-gray-800/50 rounded-2xl p-6 border border-gray-100 dark:border-gray-700/50 shadow-lg shadow-gray-200/50 dark:shadow-none hover:shadow-xl transition-all group">
                <div class={`w-10 h-10 rounded-xl mb-4 flex items-center justify-center ${index === 0 ? 'bg-blue-100 dark:bg-blue-900/30' : index === 1 ? 'bg-purple-100 dark:bg-purple-900/30' : 'bg-green-100 dark:bg-green-900/30'}`}>
                  <span class="text-2xl">{index === 0 ? 'üéØ' : index === 1 ? 'ü§ù' : 'üìö'}</span>
                </div>
                <h3 class="font-bold text-gray-900 dark:text-white mb-2 text-lg group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">{value.title}</h3>
                <p class="text-gray-600 dark:text-gray-400">{value.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- CTA -->
        <div class="relative overflow-hidden text-center py-12 bg-white dark:bg-gray-800/50 rounded-3xl border border-gray-100 dark:border-gray-700/50 shadow-lg shadow-gray-200/50 dark:shadow-none">
          <!-- Decorative bubbles -->
          <div class="absolute top-0 left-0 w-48 h-48 bg-gradient-to-br from-blue-500/5 to-purple-500/5 dark:from-blue-500/10 dark:to-purple-500/10 rounded-full -translate-x-24 -translate-y-24"></div>
          <div class="absolute bottom-0 right-0 w-36 h-36 bg-gradient-to-tr from-purple-500/5 to-pink-500/5 dark:from-purple-500/10 dark:to-pink-500/10 rounded-full translate-x-16 translate-y-16"></div>
          
          <div class="relative w-14 h-14 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-blue-500/10 to-purple-500/10 dark:from-blue-500/20 dark:to-purple-500/20 flex items-center justify-center">
            <svg class="w-7 h-7 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">Let's Connect</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
            Interested in working together or just want to say hello? I'd love to hear from you.
          </p>
          <div class="flex flex-wrap justify-center gap-3">
            <a href="/contact" class="btn btn-primary">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Get in Touch
            </a>
            <a href="/projects" class="btn btn-secondary">
              View Projects
            </a>
          </div>
        </div>

      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes spin-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
  
  .animate-spin-slow {
    animation: spin-slow 8s linear infinite;
  }
</style>
