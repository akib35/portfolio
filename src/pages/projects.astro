---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { siteConfig } from '../config';
import { projects } from '../data/projects';
---

<Layout title={`Projects - ${siteConfig.name}`}>
  <section class="py-16">
    <div class="container">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">My Projects</h1>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          A collection of projects I've worked on. Each one represents a unique challenge and learning experience.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
    </div>
  </section>
</Layout>
