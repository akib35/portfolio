---
interface Props {
  title: string;
  description: string;
  techStack?: string[];
  liveLink?: string;
  githubLink?: string;
}

const { title, description, techStack = [], liveLink, githubLink } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  <h3 class="text-xl font-bold text-gray-900 mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  
  {techStack.length > 0 && (
    <div class="flex flex-wrap gap-2 mb-4">
      {techStack.map((tech) => (
        <span class="px-2 py-1 bg-gray-100 text-gray-700 text-sm rounded">
          {tech}
        </span>
      ))}
    </div>
  )}
  
  <div class="flex space-x-4">
    {liveLink && (
      <a href={liveLink} class="text-blue-600 hover:text-blue-800 font-medium" target="_blank" rel="noopener noreferrer">
        View Live â†’
      </a>
    )}
    {githubLink && (
      <a href={githubLink} class="text-gray-600 hover:text-gray-800 font-medium" target="_blank" rel="noopener noreferrer">
        View Code
      </a>
    )}
  </div>
</article>
