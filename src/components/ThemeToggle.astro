<button
  id="theme-toggle"
  type="button"
  aria-label="Toggle dark mode"
  class="relative inline-flex items-center justify-center w-10 h-10 rounded-lg bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 transition-all duration-200 group"
>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    class="w-5 h-5 text-gray-600 dark:text-yellow-300 transition-all duration-300 absolute opacity-0 dark:opacity-100 scale-50 dark:scale-100 rotate-90 dark:rotate-0"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>

  <!-- Moon icon (shown in light mode) -->
  <svg
    class="w-5 h-5 text-gray-700 dark:text-gray-300 transition-all duration-300 absolute opacity-100 dark:opacity-0 scale-100 dark:scale-50 rotate-0 dark:rotate-90"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
</button>

<script is:inline>
  // Theme toggle functionality
  function initThemeToggle() {
    const toggle = document.getElementById('theme-toggle');

    if (!toggle) return;

    toggle.addEventListener('click', () => {
      const isDark = document.documentElement.classList.contains('dark');

      if (isDark) {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
    });
  }

  // Initialize on page load
  initThemeToggle();

  // Re-initialize after view transitions (for Astro)
  document.addEventListener('astro:after-swap', initThemeToggle);
</script>
