---
interface Props {
  variant?: 'text' | 'title' | 'card' | 'avatar' | 'button';
  class?: string;
}

const { variant = 'text', class: className = '' } = Astro.props;

const variants = {
  text: 'h-4 w-full',
  title: 'h-8 w-3/4',
  card: 'h-48 w-full rounded-xl',
  avatar: 'h-12 w-12 rounded-full',
  button: 'h-10 w-24 rounded-lg',
};
---

<div class={`skeleton ${variants[variant]} ${className}`}></div>

<style>
  .skeleton {
    @apply bg-gray-200 dark:bg-gray-700 animate-pulse;
  }
</style>
