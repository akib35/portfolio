---
import Navigation from './Navigation.astro';
import { siteConfig } from '../config';
import { Image } from 'astro:assets';
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container py-4">
    <div class="flex justify-between items-center">
      <!-- Left: Profile Picture + Name -->
      <a href="/" class="flex items-center gap-3 text-xl font-bold text-gray-900 hover:text-blue-600 no-underline">
        <Image 
          src="/my pic.png" 
          alt={siteConfig.name}
          width={40} 
          height={40} 
          loading="eager"
          class="w-10 h-10 rounded-full object-cover border-2 border-blue-600"
        />
        <span class="hidden sm:inline">{siteConfig.name}</span>
      </a>
      
      <!-- Center/Right: Navigation + CV Button -->
      <div class="flex items-center gap-6">
        <Navigation />
        <a 
          href="/my-cv.pdf" 
          download
          class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-lg hover:bg-blue-700 transition-colors"
        >
          <Image 
            src="/document-download.svg" 
            alt="Resume Icon" 
            width={16} 
            height={16} 
            loading="eager"
            class="w-4 h-4 object-contain" 
          />
          <span class="hidden sm:inline">Résumé</span>
        </a>
      </div>
    </div>
  </div>
</header>
