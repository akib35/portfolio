{
  "name": "astro-portfolio",
  "version": "1.0.0",
  "description": "A simple portfolio project built with Astro, Tailwind CSS, and vanilla JavaScript",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "dev:wrangler": "wrangler pages dev dist --compatibility-date=2024-01-01 --d1=DB",
    "build": "astro build",
    "preview": "astro preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:create": "wrangler d1 create portfolio-forms",
    "db:migrate": "wrangler d1 execute portfolio-forms --file=./migrations/0001_create_submissions_table.sql",
    "db:migrate:local": "wrangler d1 execute portfolio-forms --local --file=./migrations/0001_create_submissions_table.sql"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/sitemap": "^3.7.0",
    "@astrojs/tailwind": "^5.1.5",
    "astro": "^5.16.11",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250127.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "vitest": "^4.0.17",
    "wrangler": "^3.105.0"
  },
  "pnpm": {
    "overrides": {
      "h3": ">=1.15.5"
    }
  },
  "keywords": [
    "portfolio",
    "astro",
    "tailwindcss"
  ],
  "author": "Md Akib Hasan",
  "license": "MIT"
}